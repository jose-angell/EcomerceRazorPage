@page
@model ECommerceRazorPages.Pages.Cliente.Carrito.ResumenModel
@{
    ViewData["Title"] = "Resumen";
}
<form method="post">
    <br />
    <div class="backgroundWhiteBorder">
        <div class="container">
            <div class="card">
                <!-- Header -->
                <div class="card-header bg-dark text-light">
                    <div class="row">
                        <div class="col-6 pt-2">
                            <h3 class="text-white-50">Resumen de Compra</h3>
                        </div>
                        <div class="col-6 text-end">
                            <a asp-page="Index" class="btn btn-outline-info btn-sm">Volver al Carrito</a>
                        </div>
                    </div>
                </div>

                <!-- Body -->
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="row">
                            <!-- Información de Envío -->
                            <div class="col-12 col-lg-6 pb-4">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Información de Envío:</span>
                                </h4>
                                <div class="row my-1">
                                    <div class="col-5">
                                        <label>Nombre Completo</label>
                                    </div>
                                    <div class="col-7">
                                        <input name="Nombre" class="form-control" placeholder="Ingresa tu nombre" required />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-5">
                                        <label>Teléfono</label>
                                    </div>
                                    <div class="col-7">
                                        <input name="Telefono" type="tel" class="form-control" placeholder="Ingresa tu teléfono" required />
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-5">
                                        <label>Dirección</label>
                                    </div>
                                    <div class="col-7">
                                        <textarea data-no-tinymce="true" name="Direccion" class="form-control" placeholder="Ingresa tu dirección" required style="height: 100px;"></textarea>
                                    </div>
                                </div>
                                <div class="row my-1">
                                    <div class="col-5">
                                        <label>Instrucciones Adicionales</label>
                                    </div>
                                    <div class="col-7">
                                        <textarea data-no-tinymce="true" name="Instrucciones" class="form-control" placeholder="Opcional" style="height: 80px;"></textarea>
                                    </div>
                                </div>
                            </div>

                            <!-- Resumen del Pedido -->
                            <div class="col-12 col-lg-5 offset-lg-1">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-info">Detalles del Pedido:</span>
                                </h4>
                                <ul class="list-group mb-3">
                                    <!-- Producto -->
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <h6 class="my-0">Producto: Camiseta Básica</h6>
                                            <small class="text-muted">Cantidad: 2</small>
                                        </div>
                                        <span class="text-muted">$30.00</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between">
                                        <div>
                                            <h6 class="my-0">Producto: Jeans Clásicos</h6>
                                            <small class="text-muted">Cantidad: 1</small>
                                        </div>
                                        <span class="text-muted">$50.00</span>
                                    </li>

                                    <!-- Total -->
                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                        <small class="text-info">Total (USD)</small>
                                        <strong class="text-info">$80.00</strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Footer -->
                <div class="card-footer">
                    <div class="row">
                        <div class="col-12 text-end">
                            <button type="submit" id="btnComprar" class="btn btn-success">
                                Confirmar y Comprar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>